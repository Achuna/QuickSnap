<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.example.achuna.quicksnap.Result">

    <EditText
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:gravity="top"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="22dp"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:background="@color/transparent"
        android:text="Text field"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@color/transparent"
        app:srcCompat="@drawable/share" />

    <Button
        android:id="@+id/viewImageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/shareButton"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        android:background="@color/transparent"
        android:text="View Image" />


    <Button
        android:id="@+id/retryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/viewImageBtn"
        android:background="@color/transparent"
        android:text="Retry" />

    <Button
        android:id="@+id/webSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/viewImageBtn"
        android:layout_alignBottom="@+id/viewImageBtn"
        android:layout_alignStart="@+id/resultText"
        android:layout_marginStart="7dp"
        android:background="@color/transparent"
        android:text="Web Search" />

    <TextView
        android:id="@+id/textView"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Extracted Text" />


    <!-- Add one image button to share content -->


</RelativeLayout>
