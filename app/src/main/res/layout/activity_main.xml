<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.achuna.quicksnap.MainActivity">


    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">



    </FrameLayout>


    <Button
        android:id="@+id/rotateButton"
        android:layout_toRightOf="@id/snapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="40dp"
        android:background="@color/transparent"
        android:drawableTop="@drawable/rotate_icon"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:text="Portrait" />

    <Button
        android:id="@+id/importBtn"
        android:layout_toLeftOf="@id/snapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="40dp"
        android:background="@color/transparent"
        android:drawableTop="@drawable/download_icon"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:text="Import" />

    <ImageButton
        android:id="@+id/snapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:background="@color/transparent"
        app:srcCompat="@drawable/circle" />


</RelativeLayout>
